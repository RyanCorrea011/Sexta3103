@model WebApp_Noite.Models.ClientesModel
<div class="col-4">

    <div class="card">
        <div class="card-header">
            <h2>Cadastro de Clientes</h2>
        </div>
        <div class="card-body">
            <form action="/Cliente/SalvarDados" method="post" >
            <label>Id</label>
            <input readonly name="id" value="@Model.Id" class="form-control" />
                <label>Nome</label>
                <input type="text" value="@Model.Nome" name="Nome" class="form-control" />
                <br />
                <label>Telefone</label>
                <input type="number" value="@Model.fone" name="Fone" class="form-control" />
                <br />
                <button type="submit" class="btn btn-info">
                    Salvar Cliente
                </button>

            </form>
        </div>

    </div>

</div>

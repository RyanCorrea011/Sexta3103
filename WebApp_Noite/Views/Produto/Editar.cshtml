@model WebApp_Noite.Models.ProdutoModel
<div class="col-4">

    <div class="card">
        <div class="card-header">
            <h2>Cadastro de Produtos</h2>
        </div>
        <div class="card-body">
            <form action="/Produto/SalvarDados" method="post">
                <label>Id</label>
                <input readonly name="id" value="@Model.Id" class="form-control" />
                <label>Nome</label>
                <input type="text" value="@Model.Nome" name="Nome" class="form-control" />
                <br />
                <label>Quantidade em Estoque</label>
                <input type="number" value="@Model.Estoque" name="Estoque" class="form-control" />
                <br />
                <button type="submit" class="btn btn-info">
                    Salvar Produto
                </button>

            </form>
        </div>

    </div>

</div>


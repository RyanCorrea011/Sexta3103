@model List<WebApp_Noite.Models.ProdutoModel>

  <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2>Lista de Produtos</h2>
            </div>
            <div class="card-body ">

                <div class="row">
                    <div class="col-2">
                        <a href="/Produto/Cadastrar" class="btn btn-success">
                        Novo Produto    
                        </a>
                    </div>
                    <div class="col-4">
                        <select name="Filtro" class="form-control">
                            <option value="0">Todas as opções</option>
                             <option value="id">Por Codigo</option>
                            <option value="nome">Por nome</option>
                            <option value="qtd">Por Qtd</option>
                        </select>
                    </div>

                    <div class="col-4">
                        <input type="text" name="Busca" class="form-control"/>
                    </div>

                    <div class="col-2">
                        <button class="btn btn-primary">
                            Pesquisar
                        </button>
                    </div>

                </div>

                <form action="/Produto/Pesquisa" method="get" >
                    
                </form>


                <table class="table table-striped" >
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nome</th>
                            <th>Qtd em Estoque</th>                           
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var Produto in Model)
                    {
                        <tr>
                            <td>@Produto.Id</td>
                            <td>@Produto.Nome</td>
                            <td>@Produto.Estoque</td>
                            <td>
                                <a href="/Produto/Editar/@Produto.Id"
                                   class="btn btn-warning">
                                    Editar
                                </a>
                                <a href="/Produto/excluir/@Produto.Id"
                                   class="btn btn-danger">
                                    Excluir
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>

        </div>

    </div>
